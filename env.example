# GuardFlow SaaS - Environment Variables

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/guardflow_saas
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=guardflow_saas
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# API CONFIGURATION
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1
API_TITLE=GuardFlow SaaS API
API_DESCRIPTION=Plataforma de IA para Mercados
API_DOCS_URL=/docs
API_REDOC_URL=/redoc

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# GUARDPASS INTEGRATION
# ===========================================
GUARDPASS_API_KEY=your-guardpass-api-key
GUARDPASS_API_URL=https://api.guardpass.com
GUARDPASS_CLIENT_ID=your-guardpass-client-id
GUARDPASS_CLIENT_SECRET=your-guardpass-client-secret
GUARDPASS_REDIRECT_URI=http://localhost:3000/auth/callback

# ===========================================
# AI SERVICES
# ===========================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
HUGGINGFACE_API_KEY=your-huggingface-api-key
GOOGLE_VISION_API_KEY=your-google-vision-api-key
GOOGLE_VISION_PROJECT_ID=your-google-project-id

# ===========================================
# PAYMENT SERVICES
# ===========================================
MERCADO_PAGO_ACCESS_TOKEN=your-mercado-pago-access-token
MERCADO_PAGO_PUBLIC_KEY=your-mercado-pago-public-key
MERCADO_PAGO_WEBHOOK_SECRET=your-mercado-pago-webhook-secret
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_CHAIN_ID=137
PRIVATE_KEY=your-private-key-here
CONTRACT_ADDRESS=0x...
GAS_LIMIT=1000000
GAS_PRICE=20000000000

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_TLS=true
SMTP_SSL=false

# ===========================================
# NOTIFICATION SERVICES
# ===========================================
FIREBASE_SERVER_KEY=your-firebase-server-key
FIREBASE_PROJECT_ID=your-firebase-project-id
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# ===========================================
# FILE STORAGE
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=guardflow-saas-storage
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=password123

# ===========================================
# MONITORING & LOGGING
# ===========================================
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO
LOG_FORMAT=json
ELASTICSEARCH_URL=http://localhost:9200
KIBANA_URL=http://localhost:5601
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001

# ===========================================
# CELERY CONFIGURATION
# ===========================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=America/Sao_Paulo
CELERY_ENABLE_UTC=true

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG=true
REACT_APP_ANALYTICS_ID=your-analytics-id

# ===========================================
# MOBILE CONFIGURATION
# ===========================================
EXPO_PUBLIC_API_URL=http://localhost:8000
EXPO_PUBLIC_WS_URL=ws://localhost:8000/ws
EXPO_PUBLIC_ENVIRONMENT=development
EXPO_PUBLIC_DEBUG=true

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
ENVIRONMENT=development
DEBUG=true
TESTING=false
CORS_ORIGINS=http://localhost:3000,http://localhost:19000
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================
# ENVIRONMENT=production
# DEBUG=false
# TESTING=false
# CORS_ORIGINS=https://app.guardflow.com,https://dashboard.guardflow.com
# ALLOWED_HOSTS=app.guardflow.com,dashboard.guardflow.com,api.guardflow.com

# ===========================================
# FEATURE FLAGS
# ===========================================
FEATURE_AI_ENABLED=true
FEATURE_BLOCKCHAIN_ENABLED=true
FEATURE_ESG_ENABLED=true
FEATURE_NFT_ENABLED=true
FEATURE_DEFI_ENABLED=false
FEATURE_METAVERSE_ENABLED=false

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_BURST=200

# ===========================================
# CACHE CONFIGURATION
# ===========================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_BACKEND=redis
CACHE_PREFIX=guardflow_saas

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=guardflow-saas-backups

# ===========================================
# HEALTH CHECK CONFIGURATION
# ===========================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
